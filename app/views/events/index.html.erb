<h1>Events List</h1>

<% @events.each do |event| %>
    <h3><%= link_to event.title, event_path(event) %></h3>
    <p><em>Hosted by: </em><%= event.supe.name %></p>
    <p>Date: <%= event.date.strftime("%B %d, %Y") %></p>
    <p>Location: <%= event.location %></p>
    <p>Cost: $<%= event.cost %></p>
<% end %>