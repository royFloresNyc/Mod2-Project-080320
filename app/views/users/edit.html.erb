<h1> Update <%= @user.username %>'s Profile here</h1>

<% if flash[:my_errors] %>
    <% flash[:my_errors].each do |msg| %>
        <p><%= msg %></p>
    <% end %>
<% end %>


<%= form_for @user do |f| %>

    <%= f.label :username %>
    <%= f.text_field :username %>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>

    <%= f.submit "Save Changes"%>
<% end %>