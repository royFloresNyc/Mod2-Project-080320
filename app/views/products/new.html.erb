<h1>Add a New Product to the Store!</h1>

<div class="general-container">
    <% if flash[:errors] %>
        <% flash[:errors].each do |error| %>
            <p><%= error %></p>
        <% end %>
    <% end %>

    <%= form_for @product do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name, :class => "product_field" %><br>

        <%= f.label :description %>
        <%= f.text_area :description %><br>

        <%= f.label :price %>
        <%= f.number_field :price, :class => "product_field" %><br>

        <%= f.submit "Add Product", :class => "new_product_submit" %>
    <% end %>
</div>